<body id="main" class="index-index">
    <div id="page-wrapper">
        <!-- Show progress bar when ajax upload-->
        <div class="progress ajax-progress-bar">
            <div class="progress-bar"></div>
        </div>
        <div id="topbar" class="navbar navbar-expand-md fixed-top navbar-dark bg-secondary">
            <div class="container-fluid">
                <a class="navbar-brand">
                    <img class="img-responsive" src="~/images/logo.png" /> Food Palace
